{
  "name": "culin-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/server.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "nodemon --watch src --exec node --loader ts-node/esm src/server.ts",
    "start": "node dist/server.js",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:backend": "tsc -p tsconfig.json",
    "build": "npm run build:frontend && npm run build:backend"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.86.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "mongoose": "^7.8.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/node": "^20.8.1",
    "nodemon": "^3.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
